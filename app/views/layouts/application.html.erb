<!DOCTYPE html>
<html>
<head>
  <title>Cpwiki</title>
  <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag "homepage" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "jquery-ui" %>
  <%= javascript_include_tag "myEditor" %>
  <%= javascript_include_tag "jquery.iframe-transport" %>
  <%= javascript_include_tag "jquery.remotipart" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="user_nav">
		<% if user_signed_in? %>
			Signed in as <%= link_to current_user.username, user_infos_path %>. Not you?
			<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
		<% else %>
			<%= link_to "Sign up", new_user_registration_path %> or 
			<%= link_to "Sign in", new_user_session_path %>
		<% end %>
	</div>
<!-- 	<% flash.each do |name, msg| %>
		<%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %> -->

	<div class="content">
	<div class="left_sidebar">
		<img class="logo" src="/cp-wiki-logo_2nd.jpg"></img>
		<h4><a href="/">Main Page</a></h4>
		<h4><a href="#">Help</a></h4>
		<h4><a href="/cps/choose">Create New CP</a></h4>
		<h4><a href="/characters/choose">Create New Character</a></h4>
		<h4><a href="#">Categories</a></h4>
			<div class="submenu" id="category_submenu">
				<ul><a href="#">Anime</a></ul>
				<ul><a href="#">Movie</a></ul>
				<ul><a href="#">Game</a></ul>
				<ul><a href="#">Novel</a></ul>
			</div>
	</div>
	<div class="right_container">
		<div class="navbar_container">
		<!-- <table class="navbar" cellspacing="0"> -->
		<!-- 	<tr> -->
		<!-- 	<td>Main Page</td>
			<td>Change Language</td>
			<td class="right_most_cell">
				<form action="/home/search" method="get">
					<input id="query" name="query" type="text" placeholder="请输入角色名称或CP简称"></input>
					攻：<input id="seme" name="seme" type="text" display:"none" />
					受：<input id="uke" name="uke" type="text" display:"none" />
					<input type="submit" id="search" value="搜索"></input>
				    <button id="cpmode">切换到CP模式</button>
				</form>
			</td>
			</tr>
		</table> -->
			<span>Main Page</span>
			<span>Change Language</span>
			<span class="right_most_cell">
				<form id="chara-form" action="/home/search" method="get">
					<input id="query" name="query" type="text" placeholder="请输入角色名称或CP简称"></input>
					<input type="submit" id="search" value="搜索"></input>
				    <button id="cpmode">切换到攻受模式</button>
				</form>
				<form id="cp-form" action="/home/search_by_seme_uke" method="get" style="display:none">
					<label for="seme">攻:</label>
					<input id="seme" name="seme"></input>
					<label for="uke">受:</label>
					<input id="uke" name="uke"></input>
					<input type="submit" id="search" value="搜索"></input>
				    <button id="charamode">切换到角色/简称模式</button>
				</form>
			</span>
		</div>

		<div class="homepage_content">
			<%= yield %>
		</div>
	</div>
</div>

<script>
$("#cpmode").click(function(event) {
	event.preventDefault();
	$('#cp-form').show();
	$('#chara-form').hide();

});

$("#charamode").click(function(event) {
	event.preventDefault();
	$('#chara-form').show();
	$('#cp-form').hide();

});

$('#chara-form').submit(function() {
	return $.trim($('#query').val()) != "";
});

$('#cp-form').submit(function() {
	return $.trim($('#seme').val()) != "" || $.trim($('#uke').val()) != "";
});
</script>
</body>
</html>
