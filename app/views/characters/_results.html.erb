<p class="search_result_nav_bar">搜索[<%= params[:chara] %>]的结果：</p>
<% results = @chara %>
<% radio_name = "new_chara" %>
<% i = 0 %>
<% for result in results %>
	<% checked = i == 0 ? true : false %>
	<%= radio_button_tag(radio_name, result.id, checked) %>
	<!--a href="/characters/<%= result.id %>"><%= label_tag :label, result.name %></a-->
	<%= render(:partial => "snippet", :locals => {:character => result}) %>
	<% i = i + 1 %>
<% end %>
<p>
	<%= radio_button_tag(radio_name, "nil", checked = results.size == 0 ? true : false, :class => 'radio_button') %>
	<%= label_tag :label, "新角色", :class => 'new_chara_label_in_search' %>
</p>