<% @title = "创建新CP - CP百科" %>
<p class="subtitle">创建新CP</p>
<%= render(:partial => "shared/create_navbar", :locals => {:step => 1, :step_names => ["输入角色姓名", "填写角色信息", "填写CP信息"]}) %>

<p>请输入您要创建的CP的两人名字：</p>
<%= form_tag("/cps/search", :method => "get") %>
<table>
	<tr>
		<td><%= label_tag(:seme, "攻：") %></td>
		<td><%= text_field_tag(:name1) %></td>
	</tr>
	<tr>
		<td><%= label_tag(:uke, "受：") %></td>
		<td><%= text_field_tag(:name2) %></td>
	</tr>
	<tr>
		<td><%= submit_tag "提交", :class => "submit_button" %></td>
	</tr>
</table>

<img class="mascot_red" src="/cpwiki_masukouto_red.png"></img>
<img class="mascot_blue" src="/cpwiki_masukouto_blue.png"></img>